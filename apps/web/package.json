{
  "name": "web",
  "type": "module",
  "version": "0.0.1",
  "scripts": {
    "astro": "astro",
    "start": "astro dev",
    "dev": "nodemon --exec \"astro build && pnpm run copyfiles\" --watch src,astro.config.mjs",
    "build": "astro check && astro build && pnpm run copyfiles",
    "preview": "astro preview",
    "copyfiles": "copyfiles -u 1 \"dist/**/*\" ../server/build"
  },
  "dependencies": {
    "@astrojs/check": "^0.7.0",
    "@astrojs/node": "^8.2.5",
    "astro": "^4.9.2",
    "typescript": "^5.4.5"
  },
  "devDependencies": {
    "copyfiles": "^2.4.1",
    "nodemon": "^3.1.2"
  }
}