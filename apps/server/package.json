{
  "name": "server",
  "version": "0.0.1",
  "scripts": {
    "clean": "rm -rf node_modules build dist .turbo",
    "dev": "cross-env PAYLOAD_CONFIG_PATH=../cms/src/payload.config.ts NODE_ENV=development nodemon",
    "build:server": "rm -rf dist/* && tsc",
    "build": "pnpm build:server",
    "serve": "node --conditions=serve dist/index.js",
    "typecheck": "tsc --noEmit",
    "lint": "eslint . --quiet",
    "test": "ts-node ./src/index.ts"
  },
  "dependencies": {
    "cms": "workspace:*",
    "express": "^4.19.2",
    "web": "workspace:*"
  },
  "devDependencies": {
    "typescript-config": "workspace:*",
    "@types/express": "^4.17.21",
    "@types/node": "^20.10.3",
    "cross-env": "^7.0.3",
    "nodemon": "^3.1.2",
    "ts-node": "^9.1.1",
    "typescript": "^5.3.2"
  }
}